<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <TableRow
        android:id="@+id/squares_top"
        android:background="#424242"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".05"
            android:background="#b4bdc5"
            android:contentDescription="@string/hello_world"
            android:onClick="goPrev"
            android:scaleType="centerInside"
            android:src="@drawable/left_arrow" >
        </ImageView>

        <LinearLayout
             android:id="@+id/top_squares"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="1dp"
            android:layout_weight=".60"
            android:background="#ffecca"
            android:orientation="vertical" >

                 <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="ÑlickCurrent"
                    android:text="@string/hello_world"
                    android:textColor="#9b9b9b" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/day"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/hello_world"
                    android:onClick="showToast"
                    android:scaleType="centerInside"
                    android:src="@drawable/square"
                    android:tag="day" >
                </ImageView>

                <ImageButton
                    android:layout_width="51dp"
                    android:layout_height="46dp"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:onClick="openMonthCalendar"
                    android:src="@drawable/calendar" >
                </ImageButton>
            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/wifi"
                android:paddingRight="5dp"
                android:onClick="onClickMore"
                android:text="@string/read_more"
                android:textColor="#424242"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".30"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/moon"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="1dp"
                 android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="#ffecca"
                android:contentDescription="@string/hello_world"
                android:onClick="showToast"
                android:src="@drawable/no_data"
                android:tag="moon" >
            </ImageView>

            <ImageView
                android:id="@+id/sign"
                android:layout_width="fill_parent"
                android:layout_height="105dp"
                 android:layout_marginLeft="0dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="2dp"
               android:background="#ffecca"
                android:contentDescription="@string/hello_world"
                android:onClick="showToast"
                android:src="@drawable/no_data"
                android:tag="sign" >
            </ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".05"
            android:background="#b4bdc5"
            android:onClick="goNext"
            android:scaleType="centerInside"
            android:src="@drawable/right_arrow" >
        </ImageView>
    </TableRow>

    <TableRow
         android:id="@+id/bottom_row"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/prev_activity"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".05"
            android:background="#b4bdc5"
            android:scaleType="centerInside"
            android:src="@drawable/square" >
        </ImageView>

        <TableLayout
            android:id="@+id/bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".9" >

            <TableRow
                android:id="@+id/squares"
                android:background="#424242"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/square1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                   android:layout_marginTop="0dp"
                   android:layout_marginLeft="2dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                     android:layout_weight=".5"
                    android:background="#f1eae2"
                    android:contentDescription="@string/hello_world"
                    android:onClick="showSquareToast"
                    android:src="@drawable/square" >
                </ImageView>

                <ImageView
                    android:id="@+id/square2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                   android:layout_marginTop="0dp"
                   android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="1dp"
                     android:layout_weight=".5"
                    android:background="#f1eae2"
                    android:contentDescription="@string/hello_world"
                    android:onClick="showSquareToast"
                    android:src="@drawable/square" >
                </ImageView>
            </TableRow>

            <TableRow
                android:id="@+id/squares2"
                android:background="#424242"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/square3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight=".45"
                    android:background="#f1eae2"
                    android:contentDescription="@string/hello_world"
                    android:onClick="showSquareToast"
                    android:src="@drawable/square" >
                </ImageView>

                <ImageView
                    android:id="@+id/square4"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight=".45"
                    android:background="#f1eae2"
                    android:contentDescription="@string/hello_world"
                    android:onClick="showSquareToast"
                    android:src="@drawable/square" >
                </ImageView>
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/next_activity"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".05"
            android:background="#b4bdc5"
            android:scaleType="centerInside"
            android:src="@drawable/square" >
        </ImageView>
    </TableRow>

</TableLayout>